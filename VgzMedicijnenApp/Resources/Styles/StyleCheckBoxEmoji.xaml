<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="StyleCheckBoxExcited" TargetType="{x:Type CheckBox}">
        <Setter Property="SnapsToDevicePixels" Value="true"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CheckBox}">
                    <StackPanel Margin="0,4,0,0">
                        <Grid>
                            <Image Name="Show" Source="/Resources/Images/Emoji/Excited_gray.png" Height="25" Width="25" Visibility="Visible"></Image>
                            <Image Name="Hide" Source="/Resources/Images/Emoji/Excited.png" Height="25" Width="25" Visibility="Hidden"></Image>
                        </Grid>
                        <TextBlock Text="Excited" Name="Text" Margin="0,3,0,0"
                                   Foreground="{StaticResource ColorTextLabel}" FontFamily="/;component/Resources/Fonts/#TeX Gyre Heros"
                                   FontSize="10"/>
                    </StackPanel>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Show" Property="Visibility" Value="Hidden"></Setter>
                            <Setter TargetName="Hide" Property="Visibility" Value="Visible"></Setter>

                            <Setter TargetName="Text" Property="Foreground" Value="{StaticResource ColorText}"></Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

